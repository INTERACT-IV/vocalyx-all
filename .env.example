# ============================================================================
# Vocalyx - Variables d'Environnement
# ============================================================================
# Copiez ce fichier en .env et adaptez les valeurs
# cp .env.example .env
# ============================================================================

# ==========================================================================
# BASE DE DONNÉES - PostgreSQL
# ==========================================================================
POSTGRES_DB=vocalyx_db
POSTGRES_USER=vocalyx
POSTGRES_PASSWORD=vocalyx_secret
DATABASE_URL=postgresql://vocalyx:vocalyx_secret@postgres:5432/vocalyx_db

# ==========================================================================
# REDIS - Broker Celery
# ==========================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ==========================================================================
# SÉCURITÉ
# ==========================================================================
# ⚠️ IMPORTANT: Changez ces valeurs en production !
# ⚠️ La clé interne DOIT être identique pour API, Frontend et Workers

# Clé secrète pour la communication inter-services
INTERNAL_API_KEY=secret_key_pour_comms_internes_123456

# Nom du projet administrateur (pour gérer les autres projets)
ADMIN_PROJECT_NAME=ISICOMTECH

# ==========================================================================
# CORS (API)
# ==========================================================================
# Origins autorisées (séparées par des virgules)
CORS_ORIGINS=http://localhost:8080,http://vocalyx-frontend:8080

# ==========================================================================
# WHISPER (Workers)
# ==========================================================================
# Modèle Whisper: tiny, base, small, medium, large-v2, large-v3
WHISPER_MODEL=./shared/models/openai-whisper-small

# Device: cpu, cuda (GPU NVIDIA), auto
WHISPER_DEVICE=cpu

# Compute type: int8 (CPU), float16 (GPU), float32
WHISPER_COMPUTE_TYPE=int8

# Langue par défaut (laisser vide pour auto-détection)
WHISPER_LANGUAGE=fr

# ==========================================================================
# PERFORMANCE (Workers)
# ==========================================================================
# Concurrence Celery par worker
MAX_WORKERS=2

# VAD (Voice Activity Detection)
VAD_ENABLED=true

# ==========================================================================
# LOGGING
# ==========================================================================
LOG_LEVEL=INFO
LOG_COLORED=false  # false dans Docker, true en développement local

# ==========================================================================
# URLS INTERNES
# ==========================================================================
VOCALYX_API_URL=http://vocalyx-api:8000